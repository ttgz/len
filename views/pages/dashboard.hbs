{{#section 'css' }}
<style>
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: linear-gradient(145deg, #ffffff, #f5f0eb);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 8px 32px rgba(139, 69, 19, 0.1);
        border: 1px solid rgba(139, 69, 19, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #d2691e, #cd853f, #daa520);
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(139, 69, 19, 0.15);
        cursor: pointer;
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        background: linear-gradient(135deg, #d2691e, #cd853f);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        font-size: 24px;
        color: white;
        box-shadow: 0 4px 15px rgba(210, 105, 30, 0.3);
    }

    .stat-number {
        font-size: 2.2rem;
        font-weight: bold;
        color: #8b4513;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #a0826d;
        font-size: 0.95rem;
        font-weight: 500;
    }


    .chart-section,
    .activity-section {
        background: linear-gradient(145deg, #ffffff, #f5f0eb);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 8px 32px rgba(139, 69, 19, 0.1);
        border: 1px solid rgba(139, 69, 19, 0.1);
    }

    .section-title {
        font-size: 1.4rem;
        color: #8b4513;
        margin-bottom: 25px;
        font-weight: 600;
    }

    .chart-placeholder {
        height: 250px;
        background: linear-gradient(135deg, #f8f4f0, #e8ddd4);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #a0826d;
        font-size: 1.1rem;
        border: 2px dashed #d2691e;
    }

    .activity-item {
        display: flex;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid rgba(139, 69, 19, 0.1);
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: linear-gradient(135deg, #daa520, #d2691e);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 16px;
        color: white;
    }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        color: #8b4513;
        font-weight: 500;
        margin-bottom: 3px;
    }

    .activity-time {
        color: #a0826d;
        font-size: 0.85rem;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
    }

    .product-card {
        background: linear-gradient(145deg, #ffffff, #f5f0eb);
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 8px 32px rgba(139, 69, 19, 0.1);
        border: 1px solid rgba(139, 69, 19, 0.1);
        transition: transform 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-3px);
    }

    .product-image {
        height: 150px;
        background: linear-gradient(135deg, #f8f4f0, #e8ddd4);
        border-radius: 15px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #d2691e;
    }

    .product-title {
        color: #8b4513;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .product-price {
        color: #d2691e;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .yarn-pattern {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        opacity: 0.03;
        z-index: -1;
        background-image:
            radial-gradient(circle at 20% 20%, #d2691e 2px, transparent 2px),
            radial-gradient(circle at 80% 80%, #cd853f 2px, transparent 2px),
            radial-gradient(circle at 40% 60%, #daa520 1px, transparent 1px);
        background-size: 50px 50px, 70px 70px, 30px 30px;
    }
</style>
{{/section }}
