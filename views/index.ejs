<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách sản phẩm</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(45deg, #f4f1eb 0%, #e8ddd4 25%, #f4f1eb 50%, #e8ddd4 75%, #f4f1eb 100%);
            background-size: 60px 60px;
            position: relative;
            min-height: 100vh;
            padding: 20px;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                radial-gradient(circle at 25% 25%, rgba(139, 69, 19, 0.1) 2px, transparent 2px),
                radial-gradient(circle at 75% 75%, rgba(160, 82, 45, 0.1) 2px, transparent 2px),
                radial-gradient(circle at 50% 50%, rgba(205, 133, 63, 0.05) 1px, transparent 1px);
            background-size: 40px 40px, 35px 35px, 25px 25px;
            animation: yarnTexture 20s linear infinite;
            pointer-events: none;
            z-index: -1;
        }

        @keyframes yarnTexture {
            0% {
                transform: translateX(0) translateY(0);
            }

            100% {
                transform: translateX(-40px) translateY(-40px);
            }
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            color: #8b4513;
            margin-bottom: 30px;
            font-size: 2.5rem;
            text-shadow: 2px 2px 4px rgba(139, 69, 19, 0.3);
            font-weight: bold;
        }

        .search-container {
            max-width: 500px;
            margin: 0 auto 30px auto;
            position: relative;
        }

        .search-box {
            width: 100%;
            padding: 15px 50px 15px 20px;
            border: 2px solid rgba(205, 133, 63, 0.3);
            border-radius: 25px;
            background: rgba(255, 255, 255, 0.9);
            font-size: 1.1rem;
            color: #8b4513;
            outline: none;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .search-box:focus {
            border-color: rgba(205, 133, 63, 0.6);
            box-shadow: 0 0 15px rgba(205, 133, 63, 0.2);
        }

        .search-box::placeholder {
            color: rgba(139, 69, 19, 0.6);
        }

        .search-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #cd853f;
            font-size: 1.2rem;
            pointer-events: none;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .product-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(139, 69, 19, 0.2);
            transition: all 0.3s ease;
            cursor: pointer;
            border: 2px solid rgba(205, 133, 63, 0.3);
            display: flex;
            align-items: center;
            padding: 20px;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(139, 69, 19, 0.3);
            border-color: rgba(205, 133, 63, 0.6);
        }

        .product-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 12px;
            transition: transform 0.3s ease;
            margin-right: 20px;
            flex-shrink: 0;
            box-shadow: 0 5px 15px rgba(139, 69, 19, 0.2);
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .product-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: flex-start;
        }

        .product-text {
            flex: 1;
        }

        .product-name {
            font-size: 1.4rem;
            font-weight: bold;
            color: #8b4513;
            margin-bottom: 10px;
            line-height: 1.3;
        }

        .product-price {
            font-size: 1.6rem;
            color: #d2691e;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .view-details-btn {
            background: linear-gradient(45deg, #cd853f, #d2691e);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 25px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: bold;
            transition: all 0.3s ease;
            width: fit-content;
            box-shadow: 0 4px 15px rgba(210, 105, 30, 0.3);
        }

        .view-details-btn:hover {
            background: linear-gradient(45deg, #d2691e, #a0522d);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(210, 105, 30, 0.4);
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(139, 69, 19, 0.7);
            backdrop-filter: blur(5px);
        }

        .modal-content {
            background: linear-gradient(135deg, #f4f1eb 0%, #e8ddd4 100%);
            margin: 2% auto;
            padding: 0;
            border-radius: 20px;
            width: 90%;
            max-width: 800px;
            max-height: 90vh;
            overflow-y: auto;
            animation: slideIn 0.3s ease;
            border: 3px solid rgba(205, 133, 63, 0.4);
        }

        @keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal-header {
            background: linear-gradient(135deg, #cd853f 0%, #d2691e 100%);
            color: white;
            padding: 20px;
            border-radius: 17px 17px 0 0;
            position: relative;
        }

        .close {
            position: absolute;
            right: 20px;
            top: 20px;
            color: white;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s ease;
        }

        .close:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .modal-body {
            padding: 30px;
        }

        .main-product-info {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid rgba(205, 133, 63, 0.3);
        }

        .main-product-image {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 15px;
            margin-bottom: 15px;
            box-shadow: 0 5px 15px rgba(139, 69, 19, 0.3);
        }

        .main-product-name {
            font-size: 2rem;
            color: #8b4513;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .main-product-price {
            font-size: 1.8rem;
            color: #d2691e;
            font-weight: bold;
        }

        /* Thanh tìm kiếm biến thể */
        .variant-search-container {
            max-width: 400px;
            margin: 0 auto 25px auto;
            position: relative;
        }

        .variant-search-box {
            width: 100%;
            padding: 12px 45px 12px 15px;
            border: 2px solid rgba(205, 133, 63, 0.3);
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.9);
            font-size: 1rem;
            color: #8b4513;
            outline: none;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .variant-search-box:focus {
            border-color: rgba(205, 133, 63, 0.6);
            box-shadow: 0 0 10px rgba(205, 133, 63, 0.2);
        }

        .variant-search-box::placeholder {
            color: rgba(139, 69, 19, 0.6);
        }

        .variant-search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #cd853f;
            font-size: 1.1rem;
            pointer-events: none;
        }

        .variants-section h3 {
            color: #8b4513;
            margin-bottom: 20px;
            font-size: 1.5rem;
            text-align: center;
            font-weight: bold;
        }

        .variants-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .variant-card {
            background: rgba(255, 255, 255, 0.8);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            border: 2px solid rgba(205, 133, 63, 0.2);
        }

        .variant-card:hover {
            background: rgba(255, 255, 255, 1);
            border-color: rgba(205, 133, 63, 0.5);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(139, 69, 19, 0.2);
        }

        .variant-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 15px;
            box-shadow: 0 3px 10px rgba(139, 69, 19, 0.2);
        }

        .variant-name {
            font-size: 1.1rem;
            font-weight: bold;
            color: #8b4513;
            margin-bottom: 8px;
        }

        .variant-price {
            font-size: 1.3rem;
            color: #d2691e;
            font-weight: bold;
        }

        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .product-card {
                flex-direction: column;
                text-align: center;
                padding: 15px;
            }

            .product-image {
                margin-right: 0;
                margin-bottom: 15px;
                width: 120px;
                height: 120px;
            }

            .modal-content {
                width: 95%;
                margin: 5% auto;
            }

            .variants-grid {
                grid-template-columns: 1fr;
            }

            h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>🧶 Danh sách sản phẩm</h1>

        <div class="search-container">
            <input type="text" class="search-box" placeholder="Tìm kiếm sản phẩm..." id="searchInput">
            <span class="search-icon">🔍</span>
        </div>

        <div class="products-grid" id="productsGrid">
            <!-- Products will be rendered here -->
        </div>
    </div>

    <!-- Modal for product details -->
    <div id="productModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modalTitle">Chi tiết sản phẩm</h2>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <div class="main-product-info">
                    <img id="mainProductImage" class="main-product-image" src="" alt="">
                    <div id="mainProductName" class="main-product-name"></div>
                    <div id="mainProductPrice" class="main-product-price"></div>
                </div>

                <div class="variants-section">
                    <!-- Thanh tìm kiếm biến thể -->
                    <div class="variant-search-container">
                        <input type="text" class="variant-search-box" placeholder="Tìm kiếm biến thể..."
                            id="variantSearchInput">
                        <span class="variant-search-icon">🔍</span>
                    </div>
                    <h3>🎨 Các biến thể sản phẩm</h3>
                    <div class="variants-grid" id="variantsGrid">
                        <!-- Variants will be rendered here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/env.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(async function () {
            const products = await get('/products');
            renderProducts(products);
        });

        $('#searchInput').on('input', function () {
            const key = ($(this).val()).trim();
            $.ajax({
                url: '/search',
                data: {
                    q: key
                },
                success: function (data) {
                    console.log(data);
                    renderProducts(data);
                },
                error: function (error) {
                    alert('lỗi hệ thống');
                }

            })

        });

        function renderProductsSearch(data) {
            const grid = document.getElementById('productsGrid');
            grid.innerHTML = products.map(product => `
                <div class="product-card" onclick="showProductDetails(${product.id})">
                    <img src="${product.image}" alt="${product.name}" class="product-image">
                    <div class="product-info">
                        <div class="product-name">${product.name}</div>
                        <div class="product-price">${formatPrice(product.price)}</div>
                        <button class="view-details-btn">Xem chi tiết</button>
                    </div>
                </div>
            `).join('');
        }
        // Render products
        function renderProducts(products) {
            const grid = document.getElementById('productsGrid');
            grid.innerHTML = products.map(product => `
                <div class="product-card" onclick="showProductDetails(${product.id})">
                    <img src="${product.image}" alt="${product.name}" class="product-image">
                    <div class="product-info">
                        <div class="product-name">${product.name}</div>
                        <div class="product-price">${formatPrice(product.price)}</div>
                        <button class="view-details-btn">Xem chi tiết</button>
                    </div>
                </div>
            `).join('');
        }

        $('#variantSearchInput').on('input', function () {
            const key = $(this).val().trim();
            const productId = $(this).data('product-id');
            $.ajax({
                url: '/variants/search',
                data: {
                    q: key,
                    id: productId
                },
                success: function (data) {
                    renderVariants(data);
                },
            });
        });

        function renderVariants(variants) {
            const variantsGrid = document.getElementById('variantsGrid');
            variantsGrid.innerHTML = variants.map(variant => `
                <div class="variant-card">
                    <img src="${variant.image}" alt="${variant.name}" class="variant-image">
                    <div class="variant-name">${variant.name}</div>
                    <div class="variant-price">${formatPrice(variant.price)}</div>
                </div>
            `).join('');
        }
        // Show product details modal
        async function showProductDetails(productId) {
            $('#variantSearchInput').data('product-id', productId);
            const data = await get('/products/' + productId);
            const product = data.product;
            if (!product) return;

            // Update modal content
            document.getElementById('modalTitle').textContent = `Chi tiết ${product.name}`;
            document.getElementById('mainProductImage').src = product.image;
            document.getElementById('mainProductName').textContent = product.name;
            document.getElementById('mainProductPrice').textContent = formatPrice(product.price);

            // Render variants
            const variantsGrid = document.getElementById('variantsGrid');
            variantsGrid.innerHTML = data.variants.map(variant => `
                <div class="variant-card">
                    <img src="${variant.image}" alt="${variant.name}" class="variant-image">
                    <div class="variant-name">${variant.name}</div>
                    <div class="variant-price">${formatPrice(variant.price)}</div>
                </div>
            `).join('');

            // Show modal
            document.getElementById('productModal').style.display = 'block';
        }

        // Close modal
        function closeModal() {
            $('#variantSearchInput').data('product-id', '');
            document.getElementById('productModal').style.display = 'none';
        }

        // Event listeners
        document.querySelector('.close').addEventListener('click', closeModal);
        window.addEventListener('click', function (event) {
            const modal = document.getElementById('productModal');
            if (event.target === modal) {
                closeModal();
            }
        });

        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                closeModal();
            }
        });

        // Initializ
        async function get(url) {
            return new Promise((resolve, reject) => {
                $.ajax({
                    url,
                    method: 'GET',
                    success: function (data) {
                        resolve(data);
                    },
                    error: function (err) {
                        alert('Lỗi');
                        reject(err);
                    }
                });
            });
        }
        function formatPrice(price) {
            return new Intl.NumberFormat('vi-VN', {
                style: 'currency',
                currency: 'VND'
            }).format(price);
        }
        // Sample product data

    </script>
</body>

</html>